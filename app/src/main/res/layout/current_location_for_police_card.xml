<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:apiKey="@string/api_map_key"
            android:clickable="true"
            android:enabled="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCheckDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date 24-08-2023"
                    android:textColor="@color/textGrey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCheckTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Time 05:00 PM"
                    android:textColor="@color/textGrey"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewCheckedLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textGrey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCheckedMyRc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/textGrey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark Lorem Ipsum"
                android:textColor="@color/textGrey"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>