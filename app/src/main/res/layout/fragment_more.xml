<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".new_fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bluegradient"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/crdChangePass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icchngPass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_ic_change_pass"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_black"
                android:textSize="18sp"
               android:layout_toRightOf="@+id/icchngPass"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/crdContactUs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icContactUs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_ic_contact_us"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto_black"

                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/icContactUs"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdAppVersion"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icAppVersion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_ic_app_version"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Version"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"

                android:layout_toRightOf="@+id/icAppVersion"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdLogOut"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout
            android:id="@+id/btnLogoutLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"

                android:layout_centerVertical="true"
                android:src="@drawable/new_ic_log_out"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"

                android:layout_toRightOf="@+id/icLogout"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>