                tools:layout_editor_absoluteY="157dp" />-->



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:id="@+id/buttonSearchByUNHCR"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="151dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/search_unhcr_pic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refugee_UNHCR"
                        android:textColor="#006996"

                        android:textAlignment="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

           <!-- <Button
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/buttonSearchByUNHCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@xml/round_corner_button"
                android:text="@string/search_unhcr"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="252dp" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:id="@+id/buttonSearchByName"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="151dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/new_search_name_pic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/named"
                        android:textColor="#006996"

                        android:textAlignment="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


         <!--   <Button
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"
