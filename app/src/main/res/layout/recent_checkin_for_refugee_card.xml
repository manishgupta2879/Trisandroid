<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCheckDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date 24-08-2023"
                    android:textColor="@color/textGrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtCheckTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Time 05:00 PM"
                    android:textColor="@color/textGrey"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude 3.113170"
                    android:textColor="@color/textGrey"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Longitude 101.662292"
                    android:textColor="@color/textGrey"
                    android:textSize="13sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtCheckedLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"

                android:text="Address No. 12 Jalan Pantai Hillpark Phase 2, Pantai Dalam, 59200 KL"
                android:textColor="@color/textGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark Lorem Ipsum"
                android:textColor="@color/textGrey"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="85dp"
                android:scaleType="fitXY"
                android:src="@drawable/within_range" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>