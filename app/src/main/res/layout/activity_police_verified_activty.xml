<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/green_tick"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verified"
        android:fontFamily="@font/sofia_pro"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identity confirmed,Check profile"
        android:textColor="@color/textGrey"
        android:layout_marginTop="7dp"
        android:textSize="14sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="200dp"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/imageViewRefugee"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_tris_logo"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Smith"
        android:id="@+id/textViewRefugeeName"

        android:textColor="@color/themeColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonViewDetails"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/button_solid_blue"
        android:padding="16dp"
        android:text="View Details"
        android:textAllCaps="false"
        android:textSize="18sp" />


</LinearLayout>